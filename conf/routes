# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Endpoint serving the main html file
GET         /                                  controllers.FrontendController.index()

# Authorization endpoints
GET         /api/token                         controllers.AuthController.getToken()
GET         /api/user                          controllers.AuthController.getManager()
POST        /api/signup                        controllers.AuthController.createManager()
POST        /api/login                         controllers.AuthController.login()
POST        /api/logout                        controllers.AuthController.logout()

# Contest endpoints
GET         /api/contest/single/:url             controllers.ContestController.getSingleContest(url:String)
GET         /api/contest/:page                   controllers.ContestController.getAll(page:Integer)
POST        /api/contest                         controllers.ContestController.create()
POST        /api/contest/:id/img                 controllers.ContestController.receiveImage(id:Long)
PUT         /api/contest                         controllers.ContestController.update()
DELETE      /api/contest/:id                     controllers.ContestController.delete(id:Long)
GET         /api/public/submissions/:id/:page    controllers.ContestSubmissionController.getProcessedVideos(id:Long, page:Integer)

# ContestSubmission endpoints
GET         /api/contest/:id/submissions/:page   controllers.ContestSubmissionController.get(id:Long, page:Integer)
POST        /api/contestSubmission               controllers.ContestSubmissionController.create()
POST        /api/contestSubmission/video/:id     controllers.ContestSubmissionController.receiveVideo(id:Long)

# Video endpoints
GET         /api/:contestId/video/:videoId     controllers.ContestSubmissionController.getVideo(contestId:Long, videoId:String)

# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /*file                                 controllers.FrontendController.assetOrDefault(file)
